<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CashFlow" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Remove ActionBar completely -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.CashFlow.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_rounded_cashflow</item>
        <item name="postSplashScreenTheme">@style/Theme.CashFlow</item>
    </style>

</resources>
